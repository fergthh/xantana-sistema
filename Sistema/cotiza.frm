            With rstArticulo
                .Index = "Codigo"
                .Seek "=", WVector1.Text
                If .NoMatch = False Then
                    WVector1.Col = 2
                    WVector1.Text = !Descripcion
                    WVector1.Col = 4
                    WVector1.Text = !Precio
                    WVector1.Text = Pusing("###,###.##", WVector1.Text)
                    WVector1.Col = 2
